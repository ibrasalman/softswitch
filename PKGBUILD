pkgname=softswitch
pkgver=1.1.0
pkgrel=3
pkgdesc="A simple command-line PHP version switcher for Arch Linux."
arch=('any')
url="https://github.com/umaarov/softswitch"
license=('MIT')
depends=('bash')
source=("$pkgname")
sha256sums=('SKIP')
package() {
  install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
